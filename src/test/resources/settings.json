{
  "blog_index" : {
	  "settings":{
	    "analysis":{
	      "analyzer":{
	        "ngram":{
	          "tokenizer":"ngram_tokenizer",
	          "filter":[
	            "lowercase"
	          ]
	        }
	      },
	      "tokenizer":{
	        "ngram_tokenizer":{
	          "type":"nGram",
	          "min_gram":"2",
	          "max_gram":"3",
	          "token_chars":[
	            "letter",
	            "digit"
	          ]
	        }
	      }
	    }
	  },
	  "mappings":{
	    "blogpost":{
	      "properties":{
	        "title":{
	          "type":"string",
	          "analyzer":"ngram"
	        }
	      }
	    }
	  }
	}
}
  
